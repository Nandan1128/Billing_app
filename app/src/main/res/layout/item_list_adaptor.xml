<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6EAF8"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_name"
                android:text="title name"
                android:paddingRight="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_discription"
                android:paddingEnd="150dp"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:text="sample discription"
                android:layout_below="@id/title_name"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sales_price_heading"
                android:text="Sales Price"
                android:textSize="16sp"
                android:layout_below="@id/item_discription"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/indian_rupee_svgrepo_com"
                android:id="@+id/price_symbol"
                android:layout_below="@id/sales_price_heading"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/sales_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sales_price_heading"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/price_symbol"
                android:layout_toRightOf="@id/price_symbol"
                android:text="11,800"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/purchase_price_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_discription"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/sales_price_heading"
                android:layout_toRightOf="@id/sales_price_heading"
                android:text="Purchase Price"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/indian_rupee_svgrepo_com"
                android:id="@+id/price_symbol01"
                android:layout_toRightOf="@+id/sales_price"
                android:layout_below="@id/purchase_price_heading"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purchase_price"
                android:layout_below="@id/purchase_price_heading"
                android:layout_toRightOf="@id/price_symbol01"
                android:text="11,800"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_number"
                android:text="125.00"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_dis"
                android:text="PCS"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/stock_number"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/edit_icon"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/stock_dis"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="10dp"/>




        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>